.silder,
.silder image,
.silder swiper
{
  width: 100%;
  height: 390rpx;
  overflow: hidden;
}

.index-nav{
  display: flex;
  /*设置子元素换行排列*/
  flex-wrap: wrap;
}

.index-nav .nav-img{
  width: 33.33333%;
  height:200rpx;
  display: flex;
  /*设置垂直排列*/
  flex-direction: column;
  /*设置主轴居中*/
  justify-content: center;
  /*设置交叉轴居中*/
  align-items: center;
  font-size: 14px;
  background-color: white;

  border-bottom: 1px solid #f00;
   box-sizing: border-box; 

}

.index-nav .nav-img::after{
  /*通过伪元素设置右1像素边框*/
  content: "";
  width: 1rpx;
  height: 100%;
  background-color: #f00;
  /*定位：不占位置*/
  position: absolute;
  right: 0;
  top: 0;
}

 .index-nav .nav-img:nth-child(3n)::after{
   /*每隔第三个去除父右边框*/
  width: 0;
} 

.index-nav image{
  width: 80rpx;
  height: 80rpx;
}

/***
首页入口分区
**/
.index-enter{
  display: flex;
  padding: 20rpx 30rpx;
}

.index-enter .enter-img{
  width: 50%;
  display: flex;
  justify-content: center;
}

.index-enter image{
  width: 320rpx;
  height: 178rpx;
}